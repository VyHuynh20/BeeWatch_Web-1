                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tên Sản Phẩm <small><em>*</em></small></label>
                                        <input required type="text" class="form-control" placeholder="Enter ...">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Phái <small><em>*</em></small></label>
                                        <div style="max-width: 400px; display: flex;flex-direction: row;">
                                            <span class="icheck-bootstrap" style="margin:0 auto;">
                                                <input type="radio" id="radioPrimary1" name="r1" checked>
                                                <label for="radioPrimary1">Nam</label>
                                            </span>
                                            <span class="icheck-bootstrap" style="margin:0 auto;">
                                                <input type="radio" id="radioPrimary2" name="r1">
                                                <label for="radioPrimary2">Nữ</label>
                                            </span>
                                            <span class="icheck-bootstrap" style="margin:0 auto;">
                                                <input type="radio" id="radioPrimary3" name="r1">
                                                <label for="radioPrimary3">UniSex</label>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
