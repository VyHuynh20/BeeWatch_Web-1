
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BEESHOP | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <style>
        ::selection {
            background: #ddca92;
            color: rgb(255, 255, 255);
        }

        .modal-dialog {
            max-width: 600px; /* New width for default modal */
        }
    </style>
</head>
<body class="hold-transition login-page dark-mode accent-warning">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1"><b style="color: #E0A800">BEE</b>SHOP</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Đăng nhập trước đã thương gia ơi^^</p>

                <form action="../../Home/Login" method="post">
                    <div class="input-group mb-3">
                        <input type="text" name="Username" class="form-control" placeholder="Tài Khoảng">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="Password" class="form-control" placeholder="Mật Khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="social-auth-links text-center mt-2 mb-3">
                        <button type="submit" class=" btn btn-block btn-warning">
                            Đăng Nhập
                        </button>
                    </div>
                </form>
                <p class="mb-1">
                    <a class="text-muted" href="../../Sellers/ForgotPassword">Tèo ! Quên mật khẩu mất rồi :(</a>
                </p>
                <p class="mb-0">
                    <a class="text-muted" href="../../Sellers/CreateSeller" class="text-center">Tạo mới một tài khoảng thương gia</a>
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
